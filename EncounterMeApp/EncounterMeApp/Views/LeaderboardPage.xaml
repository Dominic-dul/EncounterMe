<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:viewmodels="clr-namespace:EncounterMeApp.ViewModels"
    xmlns:mvvm ="clr-namespace:MvvmHelpers;assembly=MvvmHelpers"
    xmlns:model ="clr-namespace:EncounterMeApp.Models"
    x:Class="EncounterMeApp.Views.LeaderboardPage"
    BackgroundColor="AntiqueWhite"
    x:DataType="viewmodels:LeaderboardViewModel">
    <ContentPage.BindingContext>
        <viewmodels:LeaderboardViewModel/>
    </ContentPage.BindingContext>

    <ListView 
              ItemSelected="ListView_ItemSelected"
              ItemTapped="ListView_ItemTapped"
              CachingStrategy="RecycleElement"
              BackgroundColor="AntiqueWhite"
              ItemsSource="{Binding Player}"
              HasUnevenRows="True"
              SeparatorColor="Blue"
              SeparatorVisibility="None"
              IsPullToRefreshEnabled="True"
              IsRefreshing="{Binding IsBusy, Mode=OneWay}"
              RefreshCommand="{Binding RefreshCommand}">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="model:Player">
                <ViewCell>
                    <ViewCell.ContextActions>
                        <MenuItem Text="AddFriend" Clicked="MenuItem_Clicked"/>
                    </ViewCell.ContextActions>
                    <Grid Padding="5">
                        <Frame CornerRadius="10"
                               HasShadow="True">
                            <StackLayout Orientation="Horizontal">
                                <Image Source="{Binding ProfilePic}"
                                       WidthRequest="70"/>
                                <StackLayout VerticalOptions="Center">
                                    <Label VerticalOptions="Center"
                                        FontSize="Large"
                                        Text="{Binding NickName}"/>
                                    <Label VerticalOptions="Center"
                                       FontSize="Small"
                                       Text="{Binding Points}"/>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
        <ListView.Header>
            <StackLayout Orientation="Horizontal">
                <Label Text="Welcome to Leaderboard!"
                       FontSize="Large"
                       HorizontalTextAlignment="Center"
                       TextColor="Black"/>
            </StackLayout>
        </ListView.Header>
    </ListView>

</ContentPage>