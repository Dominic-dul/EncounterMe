<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EncounterMeApp.Views.SettingsPage"
             Title="Settings">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Margin="10" Orientation="Horizontal">
                <Label Text="Ligh/Dark mode" FontSize="Medium" FontAttributes="Bold" TextColor="Black" Padding="0, 3, 0, 0"/>
                <Switch VerticalOptions="Center" HorizontalOptions="End"  x:Name="ThemeSwitch"/>
            </StackLayout>
            <Entry x:Name="UserInput" Placeholder="Your new email goes here:" PlaceholderColor="Gray" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
            <Button Text="Submit" VerticalOptions="Center" Clicked="ChangeEmail_Button_Clicked"/>

            <Button CornerRadius="50" BackgroundColor="DarkMagenta"  Text="Save settings" Clicked="Save_Button_Clicked"/>
            <Button CornerRadius="50" BackgroundColor="DarkMagenta"  Text="Reset Settings" Clicked="Reset_Button_Clicked"/>
            <Button CornerRadius="50" BackgroundColor="DarkMagenta" Text="Log Out" Clicked="LogOut_Button_Clicked"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>